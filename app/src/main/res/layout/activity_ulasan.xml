<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity_ulasan">

    <ImageView
        android:id="@+id/iv_kembali_ulasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_margin="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:backgroundTint="@color/colorWhite"
        android:layout_margin="24dp"
        android:layout_below="@id/iv_kembali_ulasan"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_namaToko_ulasan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Laundry"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_inputUlasan_ulasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/fontColor"
                    android:inputType="textLongMessage"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_inputUlasan_update"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Simpan Ulasan"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/outline_custom_button"/>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>