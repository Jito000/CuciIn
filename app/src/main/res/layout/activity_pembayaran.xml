<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_pembayaran"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/whiteDark"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv_kembali_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_margin="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="36dp">
        <ImageView
            android:id="@+id/iv_nama_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/tv_namaPemesan_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemesan"
            android:textSize="16sp"
            android:textColor="@color/fontColor"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"/>
        <ImageView
            android:id="@+id/iv_noHp_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_baseline_local_phone_24"
            android:layout_below="@id/iv_nama_konfirmasi"/>
        <TextView
            android:id="@+id/tv_noHp_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_namaPemesan_konfirmasi"
            android:layout_marginStart="36dp"
            android:text="Telepon"
            android:textColor="@color/fontColor"/>
        <ImageView
            android:id="@+id/iv_alamat_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_below="@id/iv_noHp_konfirmasi"/>
        <TextView
            android:id="@+id/tv_alamat_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_noHp_konfirmasi"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="12dp"
            android:text="Alamat"
            android:textColor="@color/fontColor"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_note_24"
            android:layout_below="@id/tv_alamat_konfirmasi"/>
        <TextView
            android:id="@+id/tv_catatan_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alamat_konfirmasi"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="10dp"
            android:text="Catatan"
            android:textColor="@color/fontColor"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tv_metodeBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_catatan_konfirmasi"
            android:text="Metode Pembayaran"
            android:textColor="@color/fontColor"
            android:layout_marginTop="12dp"
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/spinner_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_metodeBayar"
            android:theme="@style/Theme.Design.Light.NoActionBar"
            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:entries="@array/pembayaran" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_pembayaran_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        android:background="@drawable/custom_button"
        android:text="Buat Pesanan"
        android:textSize="16dp"
        android:textAllCaps="false"/>

</RelativeLayout>